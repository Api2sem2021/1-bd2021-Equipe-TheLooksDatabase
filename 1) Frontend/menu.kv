<Gerenciador>:
    Screen:
        name: 'menu'
        FloatLayout:
        Screen:
            canvas:
                Color:
                    rgba: app.theme_cls.primary_color
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [0, 0, 0, 0]


        MDIconButton:
            icon: "images\perfil.png"
            pos_hint: {"center_x": .2, "center_y": .85}
            on_release: root.current = 'perfil'
            
        Label:
            text: 'Perfil de'
            pos_hint: {"center_x": .2, "center_y": .78}
        Label:
            text: 'investidor'
            pos_hint: {"center_x": .2, "center_y": .75}

        MDIconButton:
            icon: "images\icone-noticia.png"
            pos_hint: {"center_x": .2, "center_y": .65}
            on_release: root.current = 'noticia'
        
        Label:
            text: 'Notícias'
            pos_hint: {"center_x": .2, "center_y": .58}

        MDIconButton:
            icon: "images\icone-juros.png"
            pos_hint: {"center_x": .2, "center_y": .45}
            on_release: root.current = 'simulador'
        Label:
            text: 'Simulador de '
            pos_hint: {"center_x": .2, "center_y": .38}
        Label:
            text: 'Juros Compostos'
            pos_hint: {"center_x": .2, "center_y": .35}

        MDIconButton:
            icon: "images\Vector.png"
            pos_hint: {"center_x": .2, "center_y": .25}
            on_release: root.current = 'comparativo'
        Label:
            text: 'Comparativo entre'
            pos_hint: {"center_x": .2, "center_y": .18}
        Label:
            text: 'corretoras'
            pos_hint: {"center_x": .2, "center_y": .15}



        MDIconButton:
            icon: "images\icone-cotacao.png"
            pos_hint: {"center_x": .8, "center_y": .85}
            on_release: root.current = 'cotacao'
        Label:
            text: 'Cotação'
            pos_hint: {"center_x": .8, "center_y": .78}
        

        MDIconButton:
            icon: "images\icone-meta.png"
            pos_hint: {"center_x": .8, "center_y": .65}
            on_release: root.current = 'metas'
        
        Label:
            text: 'Metas'
            pos_hint: {"center_x": .8, "center_y": .58}

        MDIconButton:
            icon: "images\icone-taxa.png"
            pos_hint: {"center_x": .8, "center_y": .45}
            on_release: root.current = 'conversao'
        Label:
            text: 'Conversão de '
            pos_hint: {"center_x": .8, "center_y": .38}
        Label:
            text: 'Taxa de Câmbio'
            pos_hint: {"center_x": .8, "center_y": .35}

        MDIconButton:
            icon: "images\icone-acao.png"
            pos_hint: {"center_x": .8, "center_y": .25}
            on_release: root.current = 'codigo'
        Label:
            text: 'Código de ação'
            pos_hint: {"center_x": .8, "center_y": .18}
            
    codigo_acao:
    perfil_kv:
    noticia_kv:
    simulador_kv:
    comparativo_kv:
    cotacao_kv:
    metas_kv:
    conversao_kv:

<codigo_acao>:
    name: 'codigo'
    FloatLayout:
        MDToolbar:
            pos_hint: {"center_x": .5, "center_y": 0.95}
            size_hint_y: 0.1
            
        MDIconButton:
            icon: "arrow-left"
            user_font_size: "30sp"
            pos_hint: {"center_x": .05, "center_y": 0.95}
            on_release: app.root.current = 'menu'
            
        MDToolbar:
            pos_hint: {"center_x": .5, "center_y": .05}
            size_hint_y: 0.1

        MDFloatingActionButton:
            icon: "images\icone.png"
            user_font_size: "20sp"
            pos_hint: {"center_x": .1, "center_y": .75}
            
        
        MDFillRoundFlatButton:
            text: "Código de ações"
            md_bg_color: 0.15, 0.8, 0.25, 1
            pos_hint: {"center_x": .8, "center_y": .85}
            size_hint_x: .18
            user_font_size: "20sp"
        
        MDFillRoundFlatButton:
            text: "De qual empresa deseja saber o código de ação?"
            md_bg_color: 0, 0, 0, 0.15
            pos_hint: {"center_x": .3, "center_y": .68}
            size_hint_x: .40
            user_font_size: "20sp"
            text_size: self.size     
            halign: 'center'
            valign: 'center'
            
            
        MDTextFieldRound:
            id: codigo_input
            hint_text: "Digite Algo!"
            line_color_focus: 1, 1, 1, 1
            size_hint_x: .8
            pos_hint: {"center_x": 0.45, "center_y": .05}
            fill_color: 0, 0, 0, .4
            
        MDIconButton:
            icon: "microphone"
            user_font_size: "20sp"
            pos_hint: {"center_x": .82, "center_y": .053}
        
        MDIconButton:
            icon: "images\send.png"
            user_font_size: "1sp"
            pos_hint: {"center_x": .85, "center_y": .053}

